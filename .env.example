# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# CORS CONFIGURATION
# ============================================
# Allowed origins for CORS (use * for all origins, or specific URL like http://localhost:3000)
CORS_ORIGIN=*

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=library_user
DB_PASSWORD=library_password
DB_DATABASE=library_db

# Database synchronization (true for development, false for production)
# When true, TypeORM automatically creates/updates tables based on entities
DB_SYNCHRONIZE=true

# Database query logging (true to see SQL queries in console)
DB_LOGGING=true

# ============================================
# RATE LIMITING CONFIGURATION
# ============================================
# Rate limit window multiplier (1 = 15 minutes, 2 = 30 minutes, etc.)
COMMON_RATE_LIMIT_WINDOW_MS=1

# Maximum number of requests per IP within the window
COMMON_RATE_LIMIT_MAX_REQUESTS=100
